{
    "compilerOptions": {
        "target": "ES2018",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./*"],
            "@/*": ["./*"]
        },
        "resolveJsonModule": true,
        "types": [
            "@types/node",
            "@nuxt/types",
            "@nuxtjs/axios",
            "@nuxtjs/auth-next",
            "@types/jest",
            "vuetify",
            "jest",
            "vue-apollo/types"
        ]
    },
    "typeRoots": [
        "./node_modules/@types",
        "./node_modules/vuetify/types",
        "./typings"
    ],
    "include": ["**/*.ts", "**/*.vue"],
    "exclude": ["node_modules", ".nuxt", "dist"]
}
